<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.conteduu.planejadorviagens.controller.TripController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <top>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox prefHeight="100.0" prefWidth="100.0" spacing="10.0">
                     <children>
                        <DatePicker fx:id="startDatePicker" />
                        <DatePicker fx:id="endDatePicker" />
                     </children>
                  </VBox>
                  <VBox prefHeight="100.0" prefWidth="500.0" spacing="10.0">
                     <children>
                        <TextField fx:id="destinationField" promptText="Digite o seu destino" />
                        <TextField fx:id="costField" promptText="Digite o orÃ§amento" />
                        <Button fx:id="buttonAdd" mnemonicParsing="false" onAction="#addTrip" prefHeight="25.0" prefWidth="200.0" text="Adicionar Viagem" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </top>
         <bottom>
            <Label fx:id="lblTotal" text="Total R$ 0,00" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="10.0" top="10.0" />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="2.0" top="2.0" />
               </padding>
            </Label>
         </bottom>
         <center>
            <TableView fx:id="tripTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="colCity" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Destino" />
                <TableColumn fx:id="colStart" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Inicio" />
                  <TableColumn fx:id="colEnd" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Fim" />
                  <TableColumn fx:id="colCost" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Custo" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <BorderPane.margin>
                  <Insets left="10.0" right="10.0" />
               </BorderPane.margin>
            </TableView>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
